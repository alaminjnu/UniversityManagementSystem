<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - University Management System</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("University Management System", "Index", "Home", null, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Department", "Save", "Department")</li>
                    <li>@Html.ActionLink("View Department", "Show", "Department")</li>
                    <li>@Html.ActionLink("Course", "Save", "Course")</li>
                    <li>@Html.ActionLink("Teacher", "Save", "Teacher")</li>
                    <li>@Html.ActionLink("Course Assign To Teacher", "CourseAssignToTeacher", "CourseAssignToTeacher")</li>
                    <li>@Html.ActionLink("ViewCourse", "ShowCourseStatistics", "ViewCourse")</li>
                    @*<li>@Html.ActionLink("Register Student", "Register", "Student")</li>*@
                    <li>@Html.ActionLink("Allocate ClassRoom", "AllocateClassRoom", "AllocateClassRoom")</li>
                    @*<li>@Html.ActionLink("View Course Schedule", "ViewClassRoomAllocation", "AllocateClassRoom")</li>
                    <li>@Html.ActionLink("Enroll In A Course", "Enroll", "EnrollStudent")</li>
                    <li>@Html.ActionLink("Save Student Result", "Save", "StudentResult")</li>
                    <li>@Html.ActionLink("Unassign Courses", "UnAssign", "UnassignCourse")</li>*@
                    <li>@Html.ActionLink("Unallocate Classroom", "Unallocate", "UnallocateClassroom")</li>
                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </div>
   
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <div>
                <p>&copy; @DateTime.Now.Year - University Course And Result Management System</p>
            </div>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
